<div class="event_show">
  <h1> <%= @event.title %> </h1>
    <p> <%= @event.description %> </p>
    <p>Location: <%= link_to @event.location.name, @event.location %> </p>
</div>
<!-- INSERT MAP HERE -->

<br>
<div class="event_show">
  <% if !!flash[:notice] %>
    <h4 color="green"><%= flash[:notice] %></h4>
  <% end %>
<h3>Event Achievements</h3>
    <% @event.category.achievements.map do |achievement| %>
      <ul>
        <li><%= link_to achievement.title, achievement %> --  <%= achievement.description %> -- <%= achievement.points %> Points</li>
      </ul>
    <% end %>
    <br>
  <p>Complete Achievements:</p>
  <%= form_for @achievement, url: '/achieved', method: "post" do |f| %>
    <%= hidden_field :event, :id %>
    <%= f.collection_check_boxes :id, @event.category.achievements, :id, :title, {:prompt => "Select Achievements to Complete"} %>
    <%= f.submit "Completed"%>
  <% end %>
  <br>
  <%= button_to "Add Achievements To This Event", new_achievement_path, method: "get" %>
  <br>

  <h3>Users Attending</h3>
  <% @event.users.uniq.each do |user| %>
      <ul>
        <li><%= link_to user.username, user %></li>
      </ul>
  <% end %>
  <br>
  <p>Want to Attend?</p>
  <%= form_for @event, method: "get" do |f| %>
    <%= f.select "user_events", options_for_select(["-- Select Status --", "Attending", "Interested"])%>
    <%= f.submit "Submit"%>
  <% end %>
<br><br>
  <% if current_user.name == "Admin" %>
    <%= button_to 'Delete this Event', @event, method: :delete%>
  <% end %>
  <br>
  <%= link_to 'Events Page', events_path %> <br>
  <%= link_to 'Your Profile', user_path(current_user.id) %>
